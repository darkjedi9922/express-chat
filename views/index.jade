extends layout

block content
  .row
    .col-md
      .card
        .card-body
          h5.card-title Авторизация
          p.card-text Исходя из введенных данных вы получите уникальный ID, по которому вас можно будет пригласить в диалог
          form(action="/login" method="post")
            if errors.length
              .row
                .col
                  each error in errors
                    .alert.alert-danger= error.msg
            .row.form-group
              .col-6
                label(for='loginInput') Логин
                input#loginInput.form-control(type='text', name='login')
              .col-6
                label(for='passwordInput') Пароль
                input#passwordInput.form-control(type='password', name='password')
            button.btn.btn-primary Войти